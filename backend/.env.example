# Server Configuration
PORT=5001
BASE_URL=http://localhost:5001

# Database Configuration
MONGO_URI=mongodb+srv://username:password@cluster.mongodb.net/database-name?appName=AppName

# Authentication
JWT_SECRET=your_super_secret_jwt_key_here

# Pick Predictor System Configuration
# Minimum bet amount in coins
PREDICTOR_BET_MIN=10

# Maximum bet amount in coins
PREDICTOR_BET_MAX=10000

# System commission (0.05 = 5%)
PREDICTOR_COMMISSION=0.05

# Minutes before match start to close betting
PREDICTOR_CLOSE_BETTING_MINUTES=5

# Minutes before match start to send notifications
PREDICTOR_NOTIFICATION_MINUTES=10

# Maximum file upload size in bytes (2MB = 2097152)
UPLOAD_MAX_SIZE=2097152

# Directory for team logo uploads
UPLOAD_DIR=uploads/team-logos
